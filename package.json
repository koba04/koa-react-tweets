  "bugs": {
    "url": "https://github.com/koba04/koa-react-tweets/issues"
  },
  "homepage": "https://github.com/koba04/koa-react-tweets",
  "dependencies": {
    "koa": "^0.13.0",
    "koa-handlebars": "^0.3.1",
    "koa-router": "^3.4.0",
    "koa-static": "^1.4.7",
    "mongoose": "^3.8.17",
    "node-jsx": "koba04/node-jsx#fix-react-tools-version",
    "ntwitter": "^0.5.0",
    "react": "^0.12.0-rc1",
    "socket.io": "^1.1.0"
  },
  "devDependencies": {
    "browserify": "^6.1.0",
